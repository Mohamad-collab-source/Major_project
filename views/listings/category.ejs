<% layout("/layouts/boilerplate") %>
<body> 
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
   <% for(let listing of Listing) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
 <div class="card card-listing" >
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
  <!-- card-img overlay -->
    <div class="card-img-overlay"></div>

  <div class="card-body">
    <p class="card-text">
    <b><%= listing.title %><br/></b>  
    <% if (listing.price != null) { %>
  &#8377; <%= listing.price.toLocaleString("en-IN") %> /night &nbsp; &nbsp;<i class="show-gst">+18% GST</i>

<% } else { %>
  Price not available
<% } %>
    </p>
  </div>
</div>
    </a>
   
 <% } %>
   

    </div>



    </body>